<script type="text/ng-template" id="/posts.html">
	<br>
	<br>
	<div class="col-md-8 col-md-offset-2">
	<div class="jumbotron">
	<form ng-submit="addPost()"
        style="margin-top:30px;">
        <h3 style="text-align:center; padding-bottom:20px;">Add a New Item</h3>

        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Title"
            ng-model="title"></input>
        </div>
        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Content"
            ng-model="content"></input>
        </div>
        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Description"
            ng-model="description"></input>
        </div>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Link"
          ng-model="link"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
      </div>
      </div>
</script>